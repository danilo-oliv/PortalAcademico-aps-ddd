@using PortalAcademico.Aplicacao.ViewModels
@model IEnumerable<AlunoViewModel>

@{
    ViewData["Title"] = "Lista de Alunos";
}

<h2>Lista de Alunos</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Data de Nascimento</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aluno in Model)
        {
            <tr>
                <td>@aluno.Id</td>
                <td>@aluno.Nome</td>
                <td>@aluno.Email</td>
                <td>@aluno.DataNascimento.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@aluno.Id" class="btn btn-sm btn-primary">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@aluno.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Novo Aluno</a>
