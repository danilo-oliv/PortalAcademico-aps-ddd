@using PortalAcademico.Aplicacao.ViewModels
@model AlunoViewModel

@{
    ViewData["Title"] = "Excluir Aluno";
}

<h2>Excluir Aluno</h2>

<h3>Você tem certeza que deseja excluir este aluno?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Data de Nascimento</dt>
        <dd class="col-sm-10">@Model.DataNascimento.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
